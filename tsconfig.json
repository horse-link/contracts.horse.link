{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowJs": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "mocha"],
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["scripts", "./build", "./tests", "./deployData", "./deploy"],
  "files": ["./hardhat.config.ts"]
}
