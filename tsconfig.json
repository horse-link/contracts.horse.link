{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowJs": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "mocha"]
  },
  "include": [
    "scripts",
    "./build",
    "./tests",
    "./deployData",
    "./deploy",
    "./serverless-functions"
  ],
  "files": ["./hardhat.config.ts"]
}
